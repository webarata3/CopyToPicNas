<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
 xmlns:tools="http://schemas.android.com/tools"
 android:layout_width="match_parent"
 android:layout_height="match_parent"
 android:paddingBottom="@dimen/activity_vertical_margin"
 android:paddingLeft="@dimen/activity_horizontal_margin"
 android:paddingRight="@dimen/activity_horizontal_margin"
 android:paddingTop="@dimen/activity_vertical_margin"
 tools:context="link.webarata3.dro.copypictonas.MainActivityFragment"
 tools:showIn="@layout/activity_main">

 <android.support.design.widget.TextInputLayout
  android:id="@+id/ipTextInputLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <android.support.v7.widget.AppCompatEditText
   android:id="@+id/ipEditText"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentStart="true"
   android:layout_alignParentTop="true"
   android:hint="@string/label.ip"
   android:inputType="textUri" />
 </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
  android:id="@+id/toDirTextInputLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_below="@+id/ipTextInputLayout">

  <android.support.v7.widget.AppCompatEditText
   android:id="@+id/toDirEditText"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentStart="true"
   android:layout_alignParentTop="true"
   android:hint="@string/label.to_dir" />
 </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
  android:id="@+id/userIdTextLayoutInput"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_below="@+id/toDirTextInputLayout">

  <android.support.v7.widget.AppCompatEditText
   android:id="@+id/userIdEditText"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentStart="true"
   android:layout_alignParentTop="true"
   android:hint="@string/label.user_id" />

 </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
  android:id="@+id/passowrdTextInputLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_below="@+id/userIdTextLayoutInput">

  <android.support.v7.widget.AppCompatEditText
   android:id="@+id/passwordEditText"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentStart="true"
   android:layout_alignParentTop="true"
   android:hint="@string/label.password" />
 </android.support.design.widget.TextInputLayout>

 <android.support.design.widget.TextInputLayout
  android:id="@+id/fromDirTextInputLayout"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:layout_below="@+id/passowrdTextInputLayout">

  <android.support.v7.widget.AppCompatEditText
   android:id="@+id/fromDirEditText"
   android:layout_width="match_parent"
   android:layout_height="wrap_content"
   android:layout_alignParentStart="true"
   android:layout_alignParentTop="true"
   android:hint="@string/label.from_dir" />
 </android.support.design.widget.TextInputLayout>

 <android.support.v7.widget.AppCompatButton
  android:id="@+id/selectDirButton"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/fromDirTextInputLayout"
  android:layout_centerHorizontal="true"
  android:text="@string/select_from_dir" />

 <android.support.v7.widget.AppCompatTextView
  android:id="@+id/textView"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/selectDirButton"
  android:layout_marginTop="@dimen/activity_vertical_margin"
  android:text="@string/label.copy_note" />

 <android.support.v7.widget.AppCompatButton
  android:id="@+id/copyButton"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/textView"
  android:layout_centerHorizontal="true"
  android:text="@string/button.copy" />

 <android.support.v7.widget.AppCompatTextView
  android:id="@+id/dirInfo"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_below="@+id/textView"
  android:layout_marginTop="@dimen/activity_vertical_margin" />
</RelativeLayout>
